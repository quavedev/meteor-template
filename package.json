{
  "name": "meteor-template",
  "private": true,
  "scripts": {
    "start": "meteor --settings private/env/dev/settings.json",
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier",
    "test": "exit 0"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.2",
    "@swc/helpers": "^0.5.17",
    "meteor-node-stubs": "^1.2.22",
    "prom-client": "^15.1.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-error-boundary": "^4.1.2",
    "react-router-dom": "^6.30.1",
    "simpl-schema": "^3.4.6"
  },
  "meteor": {
    "modern": true,
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@meteorjs/rspack": "^0.1.6",
    "@quave/eslint-config-quave": "^3.0.0",
    "@rsdoctor/rspack-plugin": "^1.2.3",
    "@rspack/cli": "^1.6.0",
    "@rspack/core": "^1.6.0",
    "@rspack/plugin-react-refresh": "^1.4.3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/meteor": "^2.9.9",
    "babel-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "lefthook": "^1.12.2",
    "postcss": "^8.5.6",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.2.0",
    "react-refresh": "^0.17.0",
    "tailwindcss": "^4.1.11"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ],
    "plugins": [
      "eslint-plugin-react-compiler"
    ],
    "rules": {
      "react-compiler/react-compiler": "error",
      "react/jsx-filename-extension": "off",
      "no-await-in-loop": "off",
      "no-console": "off",
      "jsx-a11y/control-has-associated-label": "off"
    }
  }
}
