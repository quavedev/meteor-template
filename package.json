{
  "name": "meteor-template",
  "private": true,
  "scripts": {
    "start": "meteor --exclude-archs web.browser.legacy,web.cordova --settings private/env/dev/settings.json",
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier",
    "test": "exit 0"
  },
  "dependencies": {
    "@babel/runtime": "^7.26.0",
    "meteor-node-stubs": "^1.2.12",
    "prom-client": "^15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-error-boundary": "^4.1.2",
    "react-router": "^7.0.2",
    "simpl-schema": "^3.4.6"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^3.0.0",
    "@types/meteor": "^2.9.8",
    "autoprefixer": "^10.4.20",
    "babel-plugin-react-compiler": "^19.0.0-beta-df7b47d-20241124",
    "eslint-plugin-jest": "^28.9.0",
    "eslint-plugin-react-compiler": "^19.0.0-beta-df7b47d-20241124",
    "lefthook": "^1.9.0",
    "postcss": "^8.4.49",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^3.4.16"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ],
    "plugins": [
      "eslint-plugin-react-compiler"
    ],
    "rules": {
      "react-compiler/react-compiler": "error",
      "react/jsx-filename-extension": "off"
    }
  }
}
