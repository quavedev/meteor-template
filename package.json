{
  "name": "meteor-template",
  "private": true,
  "scripts": {
    "start": "meteor --exclude-archs web.browser.legacy,web.cordova --settings private/env/dev/settings.json --port 3001",
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier",
    "test": "exit 0"
  },
  "dependencies": {
    "@babel/runtime": "^7.25.6",
    "meteor-node-stubs": "^1.2.19",
    "prom-client": "^15.1.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-router-dom": "^6.30.1",
    "simpl-schema": "^3.4.6"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.js",
      "server": "server/main.js"
    }
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^3.0.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@types/meteor": "^2.9.9",
    "babel-plugin-react-compiler": "^0.0.0-experimental-6067d4e-20240924",
    "eslint-plugin-jest": "^28.12.0",
    "eslint-plugin-react-compiler": "^0.0.0-experimental-92aaa43-20240924",
    "lefthook": "^1.11.13",
    "postcss": "^8.5.4",
    "postcss-load-config": "^6.0.1",
    "tailwindcss": "^4.1.8"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ],
    "plugins": [
      "eslint-plugin-react-compiler"
    ],
    "rules": {
      "react-compiler/react-compiler": "error",
      "react/jsx-filename-extension": "off"
    }
  }
}
